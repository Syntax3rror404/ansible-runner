
ARG ALPINE_VERSION=3.13.5
FROM alpine:${ALPINE_VERSION} AS builder

RUN apk --update --no-cache add \
        unzip \
        git \
        python3 \
        python3-dev \
        py3-pip \
        gcc \
        make \
        curl \
        musl-dev \
        libffi-dev \
        openssl-dev

# Install Terraform CLI
ARG TERRAFORM_VERSION=0.14.6
WORKDIR /opt/terraform
RUN curl https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/terraform_${TERRAFORM_VERSION}_linux_amd64.zip -o file.zip && \
    unzip file.zip && rm file.zip

# Install TFE_helper
ARG TFHELPER_VERSION=release
WORKDIR /opt/tf-felper
RUN git clone -b ${TFHELPER_VERSION} https://github.com/hashicorp-community/tf-helper.git .

# Install Vault CLI
ARG VAULT_VERSION=1.7.0
WORKDIR /opt/vault
RUN curl https://releases.hashicorp.com/vault/${VAULT_VERSION}/vault_${VAULT_VERSION}_linux_amd64.zip -o file.zip && \
    unzip file.zip && rm file.zip

# Install Ansible
WORKDIR /opt/venv
ENV CRYPTOGRAPHY_DONT_BUILD_RUST=1
RUN python3 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH" VIRTUAL_ENV="/opt/venv"
RUN pip3 install --upgrade pip
RUN pip3 install ansible-tower-cli
RUN pip3 install ansible-base

## do we need this?
# RUN pip3 install ansible

#### final image
FROM alpine:${ALPINE_VERSION}
RUN apk add --no-cache python3 libffi curl jq

ENV PATH="/opt/terraform:/opt/tf-felper/tfh/bin:/opt/venv/bin:/opt/vault:${PATH}" VIRTUAL_ENV="/opt/venv"
COPY --from=builder /opt /opt
